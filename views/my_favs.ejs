<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Home Page</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">

  <!-- CSS Stylesheets -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/my-favourites.css" type="text/css" />

  <!-- JavaScript Scripts -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>

  <%- include('partials/_header') %>

  <div class="myfavs-heading">
    <h1>My Favourites</h1>
  </div>

  <main class="myfavs-main">

    <% for (let sneaker of myfavs) { %>
      <article class="myfavs-article">
        <header class="myfavs-ad-info">
          <h6> <%= sneaker.title %> </h6>
          <h6>Size: <%= sneaker.size %></h6>
          <h6>Price: $<%= sneaker.price %></h6>
          <h6>
            <% if (!sneaker.ad_sold) { %>
              Status: Available
            <% } else { %>
              Status: Sold
            <% } %>
          </h6>
        </header>
        <section class="myfavs-ad-content">
          <img src= <%= sneaker.ad_photo %>  width="200" height="200">
          <p class="myfavs-ad-desc"> <%= sneaker.ad_description %>  </p>
        </section>
        <footer class="myfavs-footer">
          <button type="button" class="btn btn-outline-primary myfavs-btns">
            <a href="/sneakers/<%= sneaker.id %>/contact ">Contact Seller</a>
          </button>
          <form action="/myfavs/<%= sneaker.id %>/delete" method="post">
            <button type="submit" class="btn btn-outline-primary myfavs-btns">Delete From Favourites</button>
          </form>
        </footer>
      </article>
    <% } %>

  </main>

</body>
</html>
